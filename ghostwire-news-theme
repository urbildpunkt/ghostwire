                $('#recent-posts').FeedEk({
                    FeedUrl: 'http://ghostwire.apps.runkite.com/rss/',
                    MaxCount: 10,
                    ShowDesc: false,
                    ShowPubDate: true,
                    DescCharacterLimit: 150
                });
             }

        });
